    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^1.6.1",
    "autoprefixer": "^10.4.20",
    "axe-core": "^4.11.0",
    "axe-playwright": "^1.2.3",
    "eslint": "^8",
    "eslint-config-next": "14.2.18",
    "jsdom": "^23.2.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "typescript": "^5",
    "vitest": "^1.6.1"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.25",
